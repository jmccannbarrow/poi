<section class="ui raised segment">
    <h3 class="ui header">List of Users</h3>
    <div class="ui grid">

        <article class="eighteen wide column">
            <table class="ui celled table segment">
                <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Delete User</th>
                    <th>Edit User</th>
                </tr>
                </thead>
                <tbody>
                {{#each users}}
                    <tr>
                        <td> {{firstName}} </td>
                        <td> {{lastName}} </td>
                        <td><div class="ui item"><a href="/accounts/deleteUser/{{_id}}" class="ui icon button"><i class="icon trash"></i>
                        </a>
                        </td>
                        <td><div class="ui item"><a href="/settings/showSettings/{{_id}}" class="ui icon button"><i class="edit icon"></i>
                        </a>
                        </td>

                    </tr>
                {{/each}}
                </tbody>
            </table>
        </article>
    </div>
</section>

