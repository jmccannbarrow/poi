<section class="ui raised segment">
    <div class="ui grid ">
        <div class="ui ten wide column">
            <div class="ui stacked fluid form segment">
                <form action="/landmarksettings" method="POST" >
                    <h3 class="ui header">Manage your Landmark</h3>

                    <div class="six wide field">

                        <label>Name</label>
                        <input placeholder="name" type="text" name="name"></div>
                    <div class="field">
                        <label>Description</label>

                        <textarea placeholder="Description" type="text" name="description"></textarea></div>
                    <div></div>
                    <div></div>
                    <div></div>
                    <div></div>
                    <div class="field">
                        <div class="field">
                            <div class="ui dropdown" name="category">
                                <input type="hidden" name="category">
                                <div class="text">Select Category</div>
                                <i class="ui dropdown icon"></i>
                                <div class="menu">
                                    <div class="item">Lake</div>
                                    <div class="item">Park</div>
                                    <div class="item">Monument</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div></div>
                    <div></div>
                    <div></div>
                    <div></div>

                    <div class="field six wide">
                        <label>File</label>
                        <div class="ui action input">
                            <input type="text" readonly>
                            <input type="file" name="file" style="display: none!important;" />
                            <div class="ui icon button">
                                <i class="cloud upload alternate icon"></i>
                            </div>
                        </div>
                    </div>

                    <button class="ui blue submit button">Submit</button>
                </form>
            </div>

        </div>
</section>

<script>
    $('input:text, .ui.button', '.ui.action.input').on('click', function (e) {
        $('input:file', $(e.target).parents()).click();
    });

    $('input:file', '.ui.action.input').on('change', function (e) {
        var name = e.target.files[0].name;
        $('input:text', $(e.target).parent()).val(name);
    });
</script>
